<Window x:Class="ProcessorsToolkit.View.SettingsWindow_AddEditDirectory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="130" Width="300" 
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel>
            <TextBox Height="21" HorizontalAlignment="Stretch" Margin="8,6,8,0" Name="DirectoryTB" VerticalAlignment="Top" Width="263" />
            
            <Label HorizontalAlignment="Right" Margin="0,0,14,0" Foreground="Blue" Cursor="Hand"  MouseDown="UIElement_OnMouseDown">Browse</Label>
            <DockPanel Width="263" Height="34"  HorizontalAlignment="Right" Margin="0,0,6,0"  >
                <Label Content="" Height="27" Name="ResultLbl" Width="100" DockPanel.Dock="Left"  />
                <Button Content="OK" Height="23" Name="OkBtn" Width="75" IsDefault="True" Margin="0" Click="OkBtn_Click" DockPanel.Dock="Left" />
                <Button Content="Cancel" Height="23" Name="CancelBtn" Width="75" IsCancel="True" Margin="0" DockPanel.Dock="Left" />
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
